<%- contentFor('body') %>

<!-- chama as funcoes dos usuarios -->
<%- include('../../operation/operationUsuario.ejs'); %>


<!-- titulo da pagina -->
<h1 class="titleUsuario">Tabela de Usuários : </h1>


<!-- tabela de dados -->
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Nome</th>
      <th scope="col">Telefone</th>
      <th scope="col">Cidade</th>
      <th scope="col">País</th>
      <th scope="col">Cep</th>
      <th scope="col">Ação</th>
    </tr>
  </thead>

  <tbody>
    <% for (user of usuarios){%>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.phone %></td>
      <td><%= user.city %></td>
      <td><%= user.country %></td>
      <td><%= user.zipCode %></td>
      <td>
        <button type="button" class="btn btn-primary" onclick="createUsuario()">Editar</button>
        <button type="button" class="btn btn-danger" onclick="removerUsuario()">Remover</button>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>